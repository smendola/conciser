# API Keys - Copy this file to .env and fill in your keys

# OpenAI (for Whisper transcription and optionally for script condensing)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic (for script condensing - optional if using OpenAI)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ElevenLabs (for voice cloning)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# D-ID (for video generation) - OR use HeyGen
DID_API_KEY=your_did_api_key_here
# HEYGEN_API_KEY=your_heygen_api_key_here

# Configuration
DEFAULT_AGGRESSIVENESS=5
DEFAULT_OUTPUT_QUALITY=1080p
TEMP_DIR=./temp
OUTPUT_DIR=./output

# Service Preferences
CONDENSER_SERVICE=openai  # openai or claude (openai is more reliable, uses gpt-4o)
